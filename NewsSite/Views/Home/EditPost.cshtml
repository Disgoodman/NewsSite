@model aspnet_config.Models.Post
@{
    ViewBag.Title = "Editing Post";
}
<form asp-action="editpost" asp-controller="home" asp-route-id="@Model.Id_Post">
    <input type="hidden" asp-for="Id_Post" />
    <div class="form-group">
        <label asp-for="Name_Post" class="control-label">Email</label>
        <input type="tel" asp-for="Name_Post" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text_Post" class="control-label">About post</label>
        <input type="text" asp-for="Text_Post" class="form-control" />
    </div>
    
    @if (TestClass.TestInt == 1)
    {
        <div class="form-group">
            <label asp-for="Owner_Post" class="control-label">Owner</label>
            <input type="number" asp-for="Owner_Post" class="form-control" />
        </div>

        <div class="form-group">
            <input class="form-check-input" type="checkbox" asp-for="Is_Approved" class="form-control"/>
            <label asp-for="Is_Approved" class="control-label">
                Approved
                </label>
        </div>
    }
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>