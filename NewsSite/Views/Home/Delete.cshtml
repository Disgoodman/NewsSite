@model aspnet_config.Models.User
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.Id_User)
        </dd>

        <dt>E-mail</dt>
        <dd>
            @Html.DisplayFor(model => model.Email_User)
        </dd>

        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name_User)
        </dd>
        <dt>Surname</dt>
        <dd>
            @Html.DisplayFor(model => model.Name_User)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>